<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/rejestruj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rejestruj konto"
            android:background="#008080"
            android:textColor="@color/white"
            android:textSize="100px"/>

        <TextView
            android:id="@+id/podajmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podaj e-mail:" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="e-mail" />

        <TextView
            android:id="@+id/podajhaslo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podaj hasło:" />

        <EditText
            android:id="@+id/haslo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/powtorzhaslo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Powtórz hasło" />

        <EditText
            android:id="@+id/haslo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#7D7D7D"
            app:cornerRadius="0dp"
            android:text="Zatwierdź" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>